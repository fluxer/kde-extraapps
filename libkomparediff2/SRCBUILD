# Maintainer: Ivailo Monev <xakepa10@gmail.com>

version=4.14.3
description="Library to compare files and strings"
depends=('kdelibs')
makedepends=('cmake' 'automoc4')
sources=("http://download.kde.org/stable/$version/src/libkomparediff2-$version.tar.xz")

src_compile() {
    mkdir "$SOURCE_DIR/build" && cd "$SOURCE_DIR/build"
    cmake ../libkomparediff2-$version \
        -DCMAKE_BUILD_TYPE=Release \
        -DKDE4_BUILD_TESTS=OFF \
        -DCMAKE_INSTALL_PREFIX=
    make
}

src_install() {
    cd "$SOURCE_DIR/build"
    make DESTDIR="$INSTALL_DIR" install
}
