    <Action name="layout_vertical"/>
    <Action name="layout_split_horiz"/>
    <Action name="layout_split_vert"/>
    <Action name="layout_grid"/>
    <Action name="break_layout"/>
    <Separator/>
    <Action name="adjust_size"/>
</ToolBar>-->

</gui>
